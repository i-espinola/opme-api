{
	"name": "certi",
	"version": "1.0.0",
	"description": "Teste tecnico CERTI - Desenvolvedor de software",
	"private": false,
	"main": "public/index.js",
	"author": "Ivan Espinola Gomes <ivan.espinola@live.com>",
	"repository": {
		"type": "git",
		"url": "git+https://github.com/i-espinola/opme.git"
	},
	"bugs": {
		"url": "https://github.com/i-espinola/opme/issues"
	},
	"readme": "https://github.com/i-espinola/opme#readme",
	"license": "MIT",
	"scripts": {
		"clean": "del public npm-debug.log package-lock.json",
		"build": "npm run clean && copyfiles -f src/*.ico public && babel ./src -d ./public/ --source-maps",
		"watch": "npm run build &&  babel ./src -d ./public/ --source-maps --watch",
		"dev": "npm run build &&  babel ./src -d ./public/ --source-maps --watch | nodemon --watch public",
		"start": "npm run build && node public/index"
	},
	"dependencies": {
		"axios": "^0.19.0",
		"body-parser": "^1.19.0",
		"copyfiles": "^2.1.1",
		"del-cli": "^3.0.0",
		"express": "^4.17.1",
		"serve-favicon": "^2.5.0"
	},
	"devDependencies": {
		"babel": "^6.23.0",
		"babel-cli": "^6.26.0",
		"babel-preset-env": "*",
		"babel-preset-es2015": "^6.24.1",
		"babel-preset-react": "^6.24.1",
		"babel-preset-stage-0": "^6.24.1",
		"eslint": "^6.5.1",
		"eslint-config-standard": "^14.1.0",
		"eslint-plugin-import": "^2.18.2",
		"eslint-plugin-node": "^10.0.0",
		"eslint-plugin-promise": "^4.2.1",
		"eslint-plugin-standard": "^4.0.1",
		"nodemon": "^1.19.4"
	}
}
